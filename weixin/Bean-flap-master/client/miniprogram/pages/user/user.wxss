.user_main{
    border-top:1px solid #fff;
    background:#00b600;
    padding:30px 0;
    box-sizing: border-box;
}
.user_login button{
    float:right;
    font-size:14px;
    width:60px;
    height:30px;
    line-height: 30px;
}
.user_headPortrait{
    width:100px;
    height:100px;
    border-radius: 50%;
    margin:0 auto;
}
.user_headPortrait image{
    width:100%;
    height:100%;
}
.user_str{
    font-size:20px;
    font-weight: bold;
    text-align: center;
    color:#fff;
    margin-top:10px;
}