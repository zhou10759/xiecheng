.main{
  display:flex;
  flex-wrap:wrap;
  justify-content: space-between;
  padding:40rpx;
}

.movie_img{
    width:90px;
    text-align: center;
    display:flex;
    flex-direction: column;
    position: relative;
    margin-bottom:46rpx;
}
.movie_img image{
    width:100%;
    height:130px;

}
.movie_title,.movie_score{
    color:#9b9b9b;
    font-size:12px;
}
.movie_score{
    float:left;
    display:flex;
    flex-direction: column;
    text-align: center;
    position:relative;
}
.comment_d3{
    margin-top:10rpx;
}


  
